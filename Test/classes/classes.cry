def main()
  print_color("Class Manipulation:", 11)

  # Making an object.
  x = Cube
  print(x)
  print("")

  # Testing object types
  print_color("Type of object: " + type(x), 11)
  print(x == Cube)
  print(x == Box)
  print(x == [nil, nil, nil])
  print("")
  
  # Setting Attributes of an object.
  y = 10
  x.@2d = Box
  x.@2d.@width = y
  x.@2d.@height = y * 2
  x.@depth = y + 11.1

  print_color("Contents of object x:", 11)
  print(x)
  print(x.@2d.@width)
  print(x.@2d.@height)
  print(x.@depth)

  return x
end

class Cube
  # Pull out attributes for easy documentation
  @2d
  @depth

  # Get the area of the cube
  def area()
    return @2d.area() * @depth
  end
end

class Box
  # Pull out attributes for easy documentation
  @width
  @height

  # Get the area of the box
  def area()
    return @width * @height
  end
end