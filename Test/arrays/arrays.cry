def main()
  # Create a string object
  val = "Crystal"
  val += " " + "Clear"
  
  # Create an array object
  x = [2, nil, true, "Hello", 6.10, nil, val, val + val]
  
  # Make a subarray
  x[1] = [[true, [val, "Hello"]], 3]
  print(x = x + 3 + "hello")
  
  # Get metrics about the array
  print_color("Array X:" , 11) 
  print(x)
  print("Size: " + size(x) + "\n")

  # Unrolling an array
  print_color("Unroll X:", 11)

  index = 0
  while(index < size(x))
    print(x[index])
    
    # Test subarray contents
    if(x[index] == [[true, ["Crystal Clear", "Hello"]], 3])
      print_color("Subarray Match!", 13)
    end

    index += 1
  end

  print("")

  # Construct a range
  y = 0 ... 10
  print_color("Range Y:", 11) 
  print(y)
  print("Size: " + size(y) + "\n")

  # Unrolling an array
  print_color("Unroll Y:", 11) 
  
  index = 0
  while(index < size(y))
   print(y[index])
   index += 1
  end

  return x
end