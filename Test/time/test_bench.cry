def clock( val )
  x = 100
  y = 0
  start_time = time()
  while(true)
    print("Total wait: " + y / 1000.0 + " seconds")
    print("Actual wait: " + ((time() - start_time) / 1000.0) + " seconds")
    print(val)
    sleep(x)
    y += x
  end
end


def accurate_clock( val )
  x = 100
  y = 0
  base_time = start_time = time
  while(true)
    print("Total wait: " + y / 1000.0 + " seconds")
    print("Actual wait: " + ((time - base_time) / 1000.0) + " seconds")

    # Wait loop
    while((time - start_time) < x)
      #prevent thrashing
      sleep(2)
    end

    y += (time - start_time)
    start_time = time
  end
end
