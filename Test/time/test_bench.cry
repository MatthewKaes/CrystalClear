def clock( val )
  x = 0
  y = 0
  while(true)
    x += 1
    y += 40
    print("Total wait: " + y / 1000.0 + " seconds")
    print(val += "!")
    sleep(5)
    if(y / 1000.0 >= 11)
      return val
    end
  end
end
