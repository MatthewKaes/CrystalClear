  val = 100000000
  start_time = time()
  print("\nTiming Test using Standard Operations:")
  while(val)
    val -= 1
  end
  print(((time() - start_time) / 1000.0) + " seconds")

  #Call a clock function using sleep
  print_color("\nEnter anything to start the clock", 11)
  input
  x = "Hello"
  ret = clock(x + " World")
  print("return from clock: " + ret)
  return ret
